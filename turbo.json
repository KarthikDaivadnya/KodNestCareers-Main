{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "VITE_API_URL",
    "VITE_APP_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs":    ["src/**", "public/**", "index.html", "vite.config.*", "tailwind.config.*", "postcss.config.*", "package.json"],
      "outputs":   ["dist/**"]
    },
    "dev": {
      "cache":      false,
      "persistent": true
    },
    "lint": {
      "inputs": ["src/**", "eslint.config.*"]
    },
    "clean": {
      "cache": false
    }
  }
}
